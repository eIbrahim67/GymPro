<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:scrollbars="none"
    tools:context=".home.view.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileLayout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/gray_v2"
                app:cardCornerRadius="500dp"
                app:layout_constraintBottom_toBottomOf="@id/textViewHello"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/currentDate">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/icon_outline_profile" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/currentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/gray_v1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/chatbotLayout"
                app:layout_constraintStart_toEndOf="@id/profileLayout"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewHello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/primary_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/chatbotLayout"
                app:layout_constraintStart_toEndOf="@id/profileLayout"
                app:layout_constraintTop_toBottomOf="@id/currentDate" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chatbotLayout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/gray_v2"
                app:cardCornerRadius="500dp"
                app:layout_constraintBottom_toBottomOf="@id/textViewHello"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/currentDate">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/icon_outline_chat" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textViewYourPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:text="Today's Workout"
                android:textColor="@color/primary_black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileLayout" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/yourPlanCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/primary_black"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewYourPlan"
                app:strokeColor="@color/primary_gray"
                app:strokeWidth="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/todayWorkoutTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's\nWorkout:"
                        android:textColor="@color/primary_white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/todayWorkoutName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Back and Biceps"
                        android:textColor="@color/primary_gray"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/todayWorkoutTitle" />

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/workoutProgressIndicator"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:progress="70"
                        app:indicatorColor="@color/primary_color"
                        app:indicatorSize="80dp"
                        app:indicatorTrackGapSize="5dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/todayWorkoutTitle"
                        app:trackColor="@color/gray_v3"
                        app:trackThickness="7dp" />

                    <TextView
                        android:id="@+id/workoutProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7/9\nWorkout"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/primary_gray"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@id/workoutProgressIndicator"
                        app:layout_constraintEnd_toEndOf="@id/workoutProgressIndicator"
                        app:layout_constraintBottom_toBottomOf="@id/workoutProgressIndicator"
                        app:layout_constraintTop_toTopOf="@id/workoutProgressIndicator"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/workoutProgressIndicator">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/todayNumOfExercises"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 Exercises"
                                android:textColor="@color/primary_white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="@id/todayExercises"
                                app:layout_constraintEnd_toEndOf="@id/todayExercises"/>

                            <TextView
                                android:id="@+id/todayExercises"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Exercises Done"
                                android:textColor="@color/primary_gray"
                                android:textSize="15sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/todayNumOfExercises" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/todayExercisesLinearProgressIndicator"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:progress="30"
                                app:indicatorColor="@color/primary_color"


                                app:trackStopIndicatorSize="0dp"
                                app:indicatorTrackGapSize="0dp"
                                app:trackColor="@color/gray_v3"
                                android:layout_marginTop="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/todayExercises" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/todayNumOfReps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120 Reps"
                                android:textColor="@color/primary_white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="@id/todayReps"
                                app:layout_constraintEnd_toEndOf="@id/todayReps"/>

                            <TextView
                                android:id="@+id/todayReps"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Reps Done"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/primary_gray"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/todayNumOfReps" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/todayRepsLinearProgressIndicator"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:progress="80"
                                app:indicatorColor="@color/primary_color"
                                app:trackStopIndicatorSize="0dp"
                                app:indicatorTrackGapSize="0dp"
                                app:trackColor="@color/gray_v3"
                                android:layout_marginTop="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/todayReps" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/todayNumOfTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="03:00 hr"
                                android:textColor="@color/primary_white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="@id/todayTime"
                                app:layout_constraintEnd_toEndOf="@id/todayTime"/>

                            <TextView
                                android:id="@+id/todayTime"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:text="Time"
                                android:textColor="@color/primary_gray"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/todayNumOfTime" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/todayTimeLinearProgressIndicator"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:progress="20"
                                app:indicatorColor="@color/primary_color"
                                app:trackStopIndicatorSize="0dp"
                                app:indicatorTrackGapSize="0dp"
                                app:trackColor="@color/gray_v3"
                                android:layout_marginTop="5dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/todayTime" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/beginTraining"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Begin Training"
                        android:textColor="@color/primary_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:backgroundTint="@color/primary_black"
                        app:cornerRadius="10dp"
                        app:iconPadding="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/todayWorkoutTitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textViewFeaturePlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="Featured plan"
                android:textColor="@color/primary_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yourPlanCard" />


            <TextView
                android:id="@+id/textViewFeaturePlanSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="See all"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yourPlanCard" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewFeaturePlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/textViewFeaturePlan"
                tools:listitem="@layout/item_rv_featured_plans" />

            <TextView
                android:id="@+id/textViewOurTrainers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="Our Trainers"
                android:textColor="@color/primary_black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerviewFeaturePlan" />


            <TextView
                android:id="@+id/textViewOurTrainersMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="See all"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerviewFeaturePlan" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewOurTrainers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/textViewOurTrainers"
                tools:listitem="@layout/item_rv_our_trainer" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:text="Feel free to suggest any features you'd like to see in our app by sending us your feedback through the support section."
                android:textColor="@color/gray_v1"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerviewOurTrainers" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>