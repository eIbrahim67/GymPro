<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            style="?attr/materialIconButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/back_button"
            android:rotation="-90"
            app:cardCornerRadius="500dp"
            app:icon="@drawable/icon_arrow"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconTint="@color/primary_black"
            app:layout_constraintBottom_toBottomOf="@id/imageLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageLayout" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imageLayout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/primary_gray"
            app:cardCornerRadius="500dp"
            app:layout_constraintStart_toEndOf="@id/backBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/primary_gray"
            app:strokeWidth="2dp">

            <ImageView
                android:id="@+id/chatWithUserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/user_image"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/chatWithUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/primary_black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imageLayout"
            app:layout_constraintStart_toEndOf="@id/imageLayout"
            app:layout_constraintTop_toTopOf="@id/imageLayout" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMore"
            style="?attr/materialIconButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/primary_color"
            android:contentDescription="@string/more_options"
            app:icon="@drawable/icon_vert_more"
            app:iconGravity="textStart"
            app:iconSize="25dp"
            app:iconTint="@color/primary_black"
            app:layout_constraintBottom_toBottomOf="@id/backBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backBtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:listitem="@layout/item_chat_user" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/chatRecyclerView"
        app:layout_constraintBottom_toBottomOf="@id/chatRecyclerView"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/recording" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:minHeight="55dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/primary_color"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadImageButton"
                style="?attr/materialIconButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/choose_an_image"
                app:icon="@drawable/icon_outline_photo"
                app:iconGravity="textStart"
                app:iconSize="25dp"
                app:iconTint="@color/primary_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="?attr/colorSecondaryContainer" />

            <EditText
                android:id="@+id/inputEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:autofillHints="text"
                android:background="@android:color/transparent"
                android:hint="@string/type_a_message"
                android:inputType="textMultiLine"
                android:maxLines="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sendButton"
                app:layout_constraintStart_toEndOf="@id/uploadImageButton"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/recordButton"
                style="?attr/materialIconButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/primary_white"
                android:contentDescription="@string/recoed"
                app:cornerRadius="10dp"
                app:icon="@drawable/icon_outline_mic"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/primary_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/gray_v4"
                app:strokeWidth="1dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendButton"
                style="?attr/materialIconButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/primary_black"
                android:contentDescription="@string/send"
                android:visibility="gone"
                app:cornerRadius="10dp"
                app:icon="@drawable/icon_outline_send"
                app:iconGravity="textStart"
                app:iconSize="25dp"
                app:iconTint="@color/primary_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/gray_v4"
                app:strokeWidth="1dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uploadImageChatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/uploadImageChatCard"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/primary_white"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/primary_black"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/uploadImageChat"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:contentDescription="Image Feature Exercise"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendImageButton"
            style="?attr/materialIconButtonStyle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primary_white"
            android:contentDescription="@string/send_image"
            app:cornerRadius="28dp"
            app:icon="@drawable/icon_outline_send"
            app:iconGravity="textStart"
            app:iconSize="25dp"
            app:iconTint="@color/primary_black"
            app:layout_constraintEnd_toStartOf="@+id/cancelImageButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uploadImageChatCard"
            app:rippleColor="?attr/colorSecondaryContainer"
            app:strokeColor="@color/primary_black"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelImageButton"
            style="?attr/materialIconButtonStyle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/primary_black"
            android:contentDescription="@string/cancel_sending_image"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_cancel"
            app:iconGravity="textStart"
            app:iconSize="25dp"
            app:iconTint="@color/primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sendImageButton"
            app:layout_constraintTop_toBottomOf="@id/uploadImageChatCard"
            app:rippleColor="?attr/colorSecondaryContainer"
            app:strokeColor="@color/primary_black"
            app:strokeWidth="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.loadingindicator.LoadingIndicator
        android:id="@+id/loadingIndicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/loading"
        android:visibility="gone"
        app:indicatorColor="@color/primary_black"
        app:indicatorSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:minHideDelay="300"
        app:showDelay="200" />


</androidx.constraintlayout.widget.ConstraintLayout>
