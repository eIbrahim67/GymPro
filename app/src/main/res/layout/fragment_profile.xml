                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp" />

                    </LinearLayout>

                    <View
                        android:background="@color/primary_color"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <LinearLayout
